<?xml version="1.0" encoding="utf-8"?>

                                                   
    
                                                  
                                                                
                                                                
                 
                                
                                                                          
           
    <android.support.v7.widget.CardView
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
                                                    
        android:background="@color/white" android:tag="layout/item_out_put_inventory_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/item_stock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:tag="binding_1"                                               
                tools:text="2017-11-03 03:11" />
                <TextView
                    android:id="@+id/item_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/item_stock_time"
                    android:tag="binding_2"                           
                    tools:text="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:tag="binding_3"                                             
                    tools:text="数量" />



            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
         