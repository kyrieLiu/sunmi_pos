<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                                           

                                                         

                 
                            
                                                                              
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg" android:tag="layout/activity_edit_employee_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:layout_marginLeft="@dimen/padding_or_margin"
            android:layout_marginRight="@dimen/padding_or_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_grey_input"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="员工姓名" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mh" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:tag="binding_1"             />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_grey_input"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv0"
                    style="@style/TCdarkTS13"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="员工姓别" />

                <TextView
                    android:id="@+id/tv1"
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv0"
                    android:text=": " />

                <ImageView
                    android:id="@+id/select_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:tag="binding_2"                         
                    android:scaleType="fitCenter"
                    android:src="@mipmap/arrow_down" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/select_iv1"
                    android:layout_toRightOf="@+id/tv1"
                    android:background="@null"
                    android:hint="请选择性别"
                    android:tag="binding_3"                         
                                                         />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_grey_input"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="员工电话" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:tag="binding_4"             
                    android:id="@+id/editText3" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mh" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_grey_input"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="员工工号" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:tag="binding_5"           
                    android:id="@+id/editText4" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mh" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_grey_input"
                android:gravity="center_vertical">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="员工工种" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mh" />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择工种"
                    android:tag="binding_6"                              
                                                            />

                <ImageView
                    android:id="@+id/select_iv0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:tag="binding_7"                              
                    android:scaleType="fitCenter"
                    android:src="@mipmap/arrow_down" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ok_btn"
            style="@style/ButtonNormalAlignBottomEnableFull"
            android:tag="binding_8"                  
            android:text="确定" />

    </RelativeLayout>
         