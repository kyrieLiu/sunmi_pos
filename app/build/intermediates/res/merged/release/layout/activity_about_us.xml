<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                            
                                                                         
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg" android:tag="layout/activity_about_us_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view" />


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_light"
                android:textSize="12sp"
                android:tag="binding_1"                  
                android:layout_marginTop="5dp"
                tools:text="当前版本1.1.1"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_2.5"
            android:tag="binding_2"                               
            app:cardElevation="@dimen/dp_1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:drawableLeft="@mipmap/xiugaimima2"
                android:drawablePadding="@dimen/dp_11"
                android:drawableRight="@mipmap/youjiantou"
                android:gravity="center_vertical"
                android:text="功能介绍"
                android:textSize="@dimen/sp_7_5"
                android:textColor="@color/text_normal"/>

        </android.support.v7.widget.CardView>


    </LinearLayout>
         