<?xml version="1.0" encoding="utf-8"?>

                                                   
    
                                                  
                                                                
                 
                                
                                                                               
           
    <android.support.v7.widget.CardView
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white" android:tag="layout/item_appointment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
         android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:tag="binding_1"                                              
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_item_appointment_dayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_item_appointment"
            android:tag="binding_2"                           
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约成功"
            android:textColor="@color/color_main"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:tag="binding_3"                                              
            android:layout_marginTop="5dp"
            />

        <View
            android:id="@+id/view_appointment_line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/text_hint"
            android:layout_below="@+id/tv_item_appointment"
            android:layout_marginTop="5dp"
            ></View>

        <TextView
            android:id="@+id/tv_item_appointment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_appointment_line"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:tag="binding_4"                          
            android:textColor="@color/color_main"
            tools:text="刘先生"
            />
        <TextView
            android:id="@+id/tv_item_appointment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="豆子"
            android:layout_toRightOf="@+id/tv_item_appointment_name"
            android:layout_below="@+id/view_appointment_line"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:tag="binding_5"                      
            />

        <TextView
            android:id="@+id/tv_item_appointment_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="染色"
            android:layout_toRightOf="@+id/tv_item_appointment_type"
            android:layout_below="@+id/view_appointment_line"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:tag="binding_6"                           
            />
        <TextView
            android:id="@+id/tv_item_appointment_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_item_appointment_weight"
            android:layout_below="@+id/view_appointment_line"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_item_appointment_isVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_appointment_line"
            android:text="会员"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_item_appointment_vip_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_7"                                         
            tools:text="15222552366"
            android:layout_below="@+id/tv_item_appointment_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_item_appointment_serverEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_8"                                              
            tools:text="服务人员:liuy"
            android:layout_below="@+id/tv_item_appointment_vip_phone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_item_appointment_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_9"                                                    
            tools:text="染色"
            android:layout_below="@+id/tv_item_appointment_serverEmployee"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_item_appointment_service"
            android:layout_marginTop="10dp"
            android:tag="binding_10"                                             
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view_appointment_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/text_hint"
                android:layout_marginTop="5dp"
                ></View>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="预约失败"
                android:background="@drawable/selector_red_2_btn_bg"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:tag="binding_11"                                             
                />
            <Button
                android:id="@+id/view_appointment_wait_time"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_red_2_btn_bg"
                android:layout_alignParentRight="true"
                android:text="暂无时间"
                android:tag="binding_12"                             
                                                                                      
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="确定预约"
                android:background="@drawable/selector_blue_btn_bg"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:tag="binding_13"                                  
                                                                                      
                android:layout_toLeftOf="@+id/view_appointment_wait_time"
                />
        </RelativeLayout>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
         