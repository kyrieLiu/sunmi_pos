<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                           

                 
                                
                                                                          
           


    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content" android:tag="layout/item_search_goods_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:clipChildren="true"
                android:orientation="vertical">

                <ys.app.petproject.widget.RotateTextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:tag="binding_1"                                                                                           
                    android:textColor="#0e932e"
                    android:textSize="10sp"
                                                                                                      />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/xiexian"
                    android:tag="binding_2"                                                           />

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:tag="binding_3"                   
                        android:textColor="@color/text_dark"
                        android:textSize="12sp"
                        android:layout_marginRight="60dp"
                        tools:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/danwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="¥"
                        android:textColor="@color/text_money"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/danwei"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/danwei"
                        android:tag="binding_4"                                                                         
                        android:textColor="@color/text_money"
                        android:textSize="16sp"
                        tools:text="30.0" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/danwei"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/jine"
                        android:background="@drawable/shape_line_light"
                        android:tag="binding_5"                                                          >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:tag="binding_6"                          
                            android:textColor="@color/text_light"
                            android:textSize="10sp" />
                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/gg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="规格："
                            android:textColor="@color/text_light"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/gg"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/gg"
                            android:layout_weight="1"
                            android:tag="binding_7"                   
                            android:textSize="12sp"
                            tools:text="袋" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/kc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="库存："
                            android:textColor="@color/text_light"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/kc"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/kc"
                            android:tag="binding_8"                                       
                            android:textSize="12sp"
                            tools:text="0" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line_divide_normal" />

            <TextView
                android:tag="binding_9"                                  
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/jiarugouwuche"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="11"
                android:drawablePadding="10dp"
                android:text="加入购物車"
                android:textColor="@color/text_dark"
                android:textSize="12sp" />
        </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_dark"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

         