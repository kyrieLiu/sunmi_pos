<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                                  

                 
                            
                                                                  
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" android:tag="layout/activity_personal_pay_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            android:id="@+id/view_tool_bar"
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_below="@+id/view"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_tool_bar"

            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal_pay_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_money"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_personal_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_QR_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="binding_1"                                            />

                <TextView
                    android:id="@+id/tv_personal_xianjin_pay"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_circle_blue"
                    android:tag="binding_2"                   
                    android:gravity="center"
                                                             
                    android:text="确认收款"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                                                                                      ></TextView>

            </RelativeLayout>


        </LinearLayout>

        <Button
            android:id="@+id/bt_personal_pay_commit"
            style="@style/ButtonNormalAlignBottomEnableFull"
            android:tag="binding_3"                   
                                                     
            android:text="确认收款"
                                                                               />
    </RelativeLayout>
         