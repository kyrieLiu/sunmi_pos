<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                                 

                                          

                 
                            
                                                                     
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg" android:tag="layout/activity_add_vip_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            layout="@layout/tool_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/huiyuanxingming"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="会员姓名 :" />

                <EditText
                    android:id="@+id/name_et"
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:tag="binding_1"               
                                                                               

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/huiyuanka"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="会员电话 :" />

                <EditText
                    android:id="@+id/tel_et"
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:tag="binding_2"              
                                                                               

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_login_input"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/TCdarkTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:drawableLeft="@mipmap/huiyuanka"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="会员卡号 :" />

                    <EditText
                        android:id="@+id/card_no_et"
                        style="@style/TCdarkTS13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLines="1"
                        android:tag="binding_3"                 
                                                                                    />

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_dialog_search_card"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center"
                    android:src="@mipmap/huiyuanka"
                    android:layout_marginRight="10dp"
                    android:tag="binding_4"                                                                     
                                                                     
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/add_vip_card_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_input"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3"
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/huiyuanka"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="卡片类型 :" />

                <ImageView
                    android:id="@+id/select_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:tag="binding_5"                         
                    android:scaleType="fitCenter"
                    android:src="@mipmap/arrow_down" />

                <EditText
                    android:id="@+id/vip_type_tv"
                    style="@style/TCdarkTS13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/select_iv"
                    android:layout_toRightOf="@+id/tv3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:editable="false"
                    android:maxLines="1"
                    android:focusable="false"
                    android:hint="请选择卡片类型"
                    android:tag="binding_6"                         
                                                              
                                                                               
                    />

            </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_add_vip_select"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否选择生日折扣: "
                        />

                    <RadioGroup
                        android:id="@+id/rg_add_vip_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        >
                        <RadioButton
                            android:id="@+id/rb_add_vip_select_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            />
                        <RadioButton
                            android:id="@+id/rb_add_vip_not_select_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="否"
                            android:checked="true"
                            />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_vip_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_login_input"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TCdarkTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:drawableLeft="@mipmap/huiyuanka"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="生日折扣 :" />

                    <TextView
                        android:id="@+id/add_vip_birthday_name"
                        style="@style/TCdarkTS13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:tag="binding_7"                          
                        android:hint="点击选择宠物生日折扣卡(选填)"

                        />

                </LinearLayout>

                <LinearLayout
                android:id="@+id/ll_add_vip_employee"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_login_input"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/huiyuanka"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="选择员工 :" />



                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="请选择员工"
                    android:tag="binding_8"                      
                                                            
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:tag="binding_9"                      
                    android:scaleType="fitCenter"
                    android:src="@mipmap/arrow_down" />


            </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/ok_btn"
                style="@style/ButtonNormalAlignBottomEnableFull"
                android:tag="binding_10"                     
                                                          
                android:text="新增会员" />

        </RelativeLayout>

    </RelativeLayout>
         