<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           
                                                         

                 
                            
                                                                        
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg" android:tag="layout/activity_vip_detail_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/view" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/jilu"
                        android:gravity="center_horizontal"
                        android:text="记录"
                        android:tag="binding_1"                                
                        android:textColor="@color/color_main" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/xinzengchongwu"
                        android:gravity="center_horizontal"
                        android:tag="binding_2"                      
                        android:text="宠物"
                        android:textColor="@color/color_main" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/bianji2"
                        android:gravity="center_horizontal"
                        android:text="修改"
                        android:tag="binding_3"                         
                        android:textColor="@color/color_main" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/chongzhi2"
                        android:gravity="center_horizontal"
                        android:text="充值"
                        android:tag="binding_4"                   
                        android:textColor="@color/color_main" />

                    <TextView
                        android:id="@+id/tv_vip_detail_refund"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/jilu"
                        android:gravity="center_horizontal"
                        android:text="退卡"
                        android:tag="binding_5"                        
                        android:textColor="@color/color_main" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:orientation="vertical" android:tag="binding_6">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/iv0"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/huiyuanxingming" />

                        <TextView
                            android:id="@+id/tv_vip_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:tag="binding_7"               
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/textView2"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_toEndOf="@+id/iv0"
                            android:layout_toRightOf="@+id/iv0"
                            android:layout_centerVertical="true"
                            android:text="会员姓名"
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>

                    <include layout="@layout/line_h_normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/huiyuanka" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv1"
                            android:text="会员电话"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tv_vip_detail_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:tag="binding_8"                
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>

                    <include layout="@layout/line_h_normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/huiyuanka" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv2"
                            android:text="会员卡号"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tv_vip_detail_cardNO"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:tag="binding_9"                 
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>

                    <include layout="@layout/line_h_normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/chongzhijine" />
                        <TextView
                            android:id="@+id/tv_vip_detail_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv3"
                            android:text="当前余额:  "
                            android:textSize="@dimen/text_size_normal" />
                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="100dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:scrollbars="none"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="binding_10"         
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/text_money"
                                android:textSize="@dimen/text_size_normal" />
                        </HorizontalScrollView>


                    </RelativeLayout>

                    <include layout="@layout/line_h_normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/change" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv4"
                            android:text="卡片类型"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tv_vipcard_detail_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:tag="binding_11"                  
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>

                    <include layout="@layout/line_h_normal" />


                    <LinearLayout
                        android:id="@+id/ll_vip_detail_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/huiyuanka" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="生日折扣"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/tv_vip_detail_birthday_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="生日卡"
                            android:gravity="right"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>


                    <include layout="@layout/line_h_normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/iv6"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/change" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv6"
                            android:text="会员积分"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:tag="binding_12"                                  
                            android:textSize="@dimen/text_size_normal" />
                    </RelativeLayout>

                    <include layout="@layout/line_h_normal" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:tag="binding_13"                                         >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:background="@color/white"
                    android:tag="binding_14"                     
                    android:scaleType="center"
                    android:src="@mipmap/add_animal"
                                                                                      />

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>
         