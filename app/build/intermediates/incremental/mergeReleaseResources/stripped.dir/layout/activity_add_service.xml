<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                           
                 
                            
                                                                             
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_add_service_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view" />
        <RelativeLayout
            android:layout_below="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/padding_or_margin"
                android:layout_marginRight="@dimen/padding_or_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_login_input"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/iv_tv_padding"
                        android:src="@mipmap/shangpinmingcheng" />

                    <TextView
                        style="@style/TCdarkTS13"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="服务名称" />

                    <TextView
                        style="@style/TCdarkTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": " />

                    <EditText
                        style="@style/TCdarkTS13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:maxLength="@integer/name_limit"
                        android:tag="binding_1"                    />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ll5"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_login_input"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv0"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/iv_tv_padding"
                        android:src="@mipmap/leixing" />

                    <TextView
                        android:id="@+id/tv0"
                        style="@style/TCdarkTS13"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv0"
                        android:text="类型" />

                    <TextView
                        android:id="@+id/tv1"
                        style="@style/TCdarkTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv0"
                        android:text=": " />

                    <ImageView
                        android:id="@+id/select_iv0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:tag="binding_2"                             
                        android:scaleType="fitCenter"
                        android:src="@mipmap/arrow_down"
                                                                                                    />

                    <TextView
                        style="@style/TCdarkTS13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/select_iv0"
                        android:layout_toRightOf="@+id/tv1"
                        android:background="@null"
                        android:hint="请选择类型"
                        android:tag="binding_3"                             
                                                                      
                        android:textColorHint="@color/text_hint" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_login_input">

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/iv_tv_padding"
                        android:src="@mipmap/xiaoshoujia" />

                    <TextView
                        android:id="@+id/tv8"
                        style="@style/TCdarkTS13"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv8"
                        android:text="销售价" />

                    <TextView
                        android:id="@+id/tv9"
                        style="@style/TCdarkTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv8"
                        android:text=": " />

                    <ys.app.petproject.widget.LastInputEditText
                        style="@style/TCredTS13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv9"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLength="@integer/price_limit"
                        android:tag="binding_4"                        
                                                                                 />
                    <!--app:onTextChangedListener="@{viewModel.mChangedListener}"-->


                    <TextView
                        style="@style/TCredTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="元" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_login_input">

                    <ImageView
                        android:id="@+id/iv9"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/iv_tv_padding"
                        android:src="@mipmap/xiaoshoujia" />

                    <TextView
                        android:id="@+id/tv11"
                        style="@style/TCdarkTS13"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv9"
                        android:text="销售价" />

                    <TextView
                        android:id="@+id/tv10"
                        style="@style/TCdarkTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv11"
                        android:text=": " />

                    <ys.app.petproject.widget.LastInputEditText
                        style="@style/TCredTS13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv11"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLength="@integer/price_limit"
                        android:tag="binding_5"                       
                                                                                       />
                    <!--app:onTextChangedListener="@{viewModel.mChangedListener}"-->


                    <TextView
                        style="@style/TCredTS13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="元" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="上传商品图片"
                    android:visibility="gone"
                    />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="10dp"
                    android:tag="binding_6"                           
                    android:src="@mipmap/upload_img"
                                                      
                    android:visibility="gone"
                    />


            </LinearLayout>


        </RelativeLayout>
        <Button
            android:tag="binding_7"                   
            style="@style/ButtonNormalAlignBottomFull"
            android:text="提交"/>
    </RelativeLayout>
         