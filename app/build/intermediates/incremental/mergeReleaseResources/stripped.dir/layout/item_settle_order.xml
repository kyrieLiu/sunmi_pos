<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                                
                                                                          

                                                          
                                                        

                                           
           

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF2F2F2"
        android:orientation="vertical" android:tag="layout/item_settle_order_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/parent_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:tag="binding_1"                            
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/padding_or_margin"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/order_name_tv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:tag="binding_2"                                                                            
                    android:textSize="13sp"
                    tools:text="订单" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toRightOf="@+id/order_name_tv"-->
                <!--android:text='@{@string/rmb+itemViewModel.model.realAmt}'-->
                <!--android:textColor="@color/text_pink"-->
                <!--android:visibility='@{itemViewModel.model.orderInfo.contains(@string/cz)?View.VISIBLE:View.GONE}'-->
                <!--tools:text="¥30.0" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:tag="binding_3"                                                  
                    android:textColor="@color/text_light"
                    android:textSize="13sp"
                    tools:text="2017-04-25   22:27:36" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/num_tv"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:tag="binding_4"                                                                                                                                                
                    android:textSize="13sp"
                    tools:text="5件商品" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/num_tv"
                    android:tag="binding_5"                                                               
                    android:textColor="@color/text_money"
                    tools:text="¥30.0" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:tag="binding_6"                                                                                                               >

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shape_child_up_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="已选商品/服务"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dash_line"
                android:layerType="software" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/child_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:tag="binding_7"                                    />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shape_child_down_line" />
        </LinearLayout>
    </LinearLayout>
         