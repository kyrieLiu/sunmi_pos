<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                          
                 
                            
                                                                 
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
         android:tag="layout/activity_modify_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            layout="@layout/tool_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"
            android:layout_marginBottom="@dimen/button_height"
            android:layout_marginLeft="@dimen/padding_or_margin"
            android:layout_marginRight="@dimen/padding_or_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/shangpinmingcheng" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="商品名称" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:tag="binding_1"             />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/tiaoxingma" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="条形码" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="@integer/bar_code_limit"
                    android:tag="binding_2"                />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:tag="binding_3"                 
                    android:src="@mipmap/saoyisaoheise" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll5"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/leixing" />

                <TextView
                    android:id="@+id/tv0"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv0"
                    android:text="类型" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv0"
                    android:text=": " />

                <ImageView
                    android:id="@+id/select_iv0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:tag="binding_4"                                     
                    android:scaleType="fitCenter"
                    android:src="@mipmap/arrow_down"
                                                                                               
                    />

                <TextView
                    style="@style/TCdarkTS13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/select_iv0"
                    android:layout_toRightOf="@+id/tv1"
                    android:background="@null"
                    android:hint="请选择类型"
                    android:tag="binding_5"                                     
                                                            />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/ll5"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/danwei" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv"
                    android:text="单位" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv"
                    android:text=": " />

                <TextView
                    android:id="@+id/select_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:tag="binding_6"                                
                    android:scaleType="fitCenter"
                    android:drawableRight="@mipmap/arrow_down"
                                                                                               
                    />

                <EditText
                    style="@style/TCdarkTS13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/select_iv"
                    android:layout_toRightOf="@+id/tv2"
                    android:background="@null"
                    android:hint="请选择单位"
                    android:tag="binding_7"                 />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/chengben" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="成本价" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <ys.app.petproject.widget.LastInputEditText
                    android:id="@+id/et_cost_money"
                    style="@style/TCredTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLength="@integer/price_limit"
                    android:tag="binding_8"               
                                                                             
                    />

                <TextView
                    android:id="@+id/tv_see_costMoney"
                    style="@style/TCredTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:tag="binding_9"                         
                                                             
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/chengben" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="会员价" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <ys.app.petproject.widget.LastInputEditText
                    android:id="@+id/et_vip_money"
                    style="@style/TCredTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLength="@integer/price_limit"
                    android:tag="binding_10"             
                                                                                   
                    />

                <TextView
                    android:id="@+id/tv_see_vipMoney"
                    style="@style/TCredTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="元"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/xiaoshoujia" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="销售价" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <ys.app.petproject.widget.LastInputEditText
                    style="@style/TCredTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:maxLength="@integer/price_limit"
                    android:tag="binding_11"              
                                                                                    
                    />

                <TextView
                    style="@style/TCredTS13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="元" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_login_input"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/iv_tv_padding"
                    android:src="@mipmap/kucunshuliang" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="初始库存" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": " />

                <EditText
                    style="@style/TCdarkTS13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="@integer/num_limit"
                    android:tag="binding_12"                />

            </LinearLayout>


        </LinearLayout>

        <Button
            style="@style/ButtonNormalAlignBottomFull"
            android:tag="binding_13"                  
            android:text="修改" />
    </RelativeLayout>
         