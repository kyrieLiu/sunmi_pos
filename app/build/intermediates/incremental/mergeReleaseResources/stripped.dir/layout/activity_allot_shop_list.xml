<?xml version="1.0" encoding="utf-8"?>

                                                        

    
                                          

                 
                            
                                                                    
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg" android:tag="layout/activity_allot_shop_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/white"
            />

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            layout="@layout/tool_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar">

            <ys.app.petproject.widget.wrapperRecylerView.IRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:loadMoreEnabled="true"
                app:loadMoreFooterLayout="@layout/layout_irecyclerview_footer"
                app:refreshEnabled="true"
                app:refreshHeaderLayout="@layout/layout_irecyclerview_refresh_header" />

            <ImageView
                android:id="@+id/noneDataIv"
                style="@style/NoneDataIv"
                android:layout_below="@id/tool_bar"
                android:src="@mipmap/none_data"
                android:tag="binding_1"                                                    />

            <ImageView
                android:id="@+id/networkErrorIv"
                style="@style/NetworkErrorIv"
                android:layout_below="@id/tool_bar"
                android:tag="binding_2"                           
                android:src="@mipmap/network_error"
                                                                                               />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tool_bar"
                android:background="@color/bg"
                android:tag="binding_3"                                                  >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/yyp" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@style/RequestProgressStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <Button
                android:id="@+id/ok_btn"
                style="@style/ButtonNormalAlignBottomEnableFull"
                android:tag="binding_4"                          
                android:text="确定" />


        </RelativeLayout>

    </RelativeLayout>
         