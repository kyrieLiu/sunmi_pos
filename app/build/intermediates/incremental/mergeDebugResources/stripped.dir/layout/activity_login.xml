<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                 
                            
                                                                
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@mipmap/shouye_bg" android:tag="layout/activity_login_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height" />

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_login_me">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/login_me" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                tools:text="@string/app_name" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_login_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TCdarkTS12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/mima"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="密码 :"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/psw_et"
                    style="@style/TCdarkTS12"
                    android:layout_width="0dp"
                    android:maxLines="1"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_login"
                    android:gravity="center_vertical"
                    android:hint="请输入登录密码"
                    android:inputType="numberPassword"
                    android:paddingLeft="10dp"
                    android:tag="binding_1"          />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/transparent_half"
                    android:gravity="center"
                    android:tag="binding_2"                   >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/login_right" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/ok_btn"
                style="@style/ButtonNormal"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:tag="binding_3"                   
                android:text="打卡"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:gravity="center"
                android:tag="binding_4"                              
                android:paddingBottom="10dp"
                android:text="忘记密码"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>
         